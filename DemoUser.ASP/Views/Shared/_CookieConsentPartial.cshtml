@using Microsoft.AspNetCore.Http.Features
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ITrackingConsentFeature consentFeature = Context.Features.Get<ITrackingConsentFeature>()!;
    bool showBanner = !consentFeature.CanTrack;
    string cookieString = consentFeature.CreateConsentCookie();
}
@if (showBanner)
{
    <div id="cookieConsent" class="alert alert-info alert-dismissible fade show" role="alert">
        <p>Ce site utilise des cookies essentiels pour son bon fonctionnement.<br />
            <a asp-action="Privacy" asp-controller="Home">En apprendre plus ?</a></p>
            <button 
                type="button" 
                class="btn btn-outline-success rounded-pill accept-policy close" 
                data-bs-dismiss="alert"
                data-cookie-string="@cookieString"
            ><span aria-hidden="true">Accepter</span>
        </button>
    </div>
    <script>
        (function(){
            const button = document.querySelector('#cookieConsent button[data-cookie-string]');
            button.addEventListener('click', function(){
                document.cookie = button.dataset.cookieString;
            }, false);
        })();
    </script>
}

